img{
  max-width: 100%;
  
}
body{
  color: #222;
}

main{
  padding: 10px;
  max-width:100vw;
  margin: 0 auto;
  margin-right: 20px;
  margin-left: 10px;
  
}

header{
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
  gap: 10px;
  
}

header a{
  text-decoration: none;
  color: inherit;
  margin-right: auto;
}

header img{
  width: 12vw;
  margin-left: 20px;

  
  transform: scale(0.5);
}

header nav{
  display: flex;
  gap: 0;
  width: 100%;
  align-items: center;
 
}

header nav #link1:hover{
 transform: scale(1.1);
 color: white;
 font-weight: 500;
transition: transform .6s ease;
}
header nav #link2:hover{
 transform: scale(1.1);
 font-weight: 500;
 color: white;
transition: transform .6s ease;
}
header nav #link3:hover{
 transform: scale(1.1);
 font-weight: 500;
 color: white;
transition: transform .6s ease;
}
header nav #link2:hover{
 transform: scale(1.1);
 font-weight: 500;
 color: white;
transition: transform .6s ease;
}

#editpostbtn:hover{
  transform: scale(1.1);
  font-weight: 500;
  color: white;
 transition: transform .6s ease;
}
#deletepostbtn:hover{
  transform: scale(1.1);
  font-weight: 500;
  color: white;



 transition: transform .6s ease;
}


/* header nav h4{
  display: flex;
} */
header nav h4:hover{
  transform: scale(1.1);
  color: white;
  transition: transform .5s ease;
  cursor: pointer;
}

#welcomeuser{
  display: flex;
  align-items: center;
  justify-content: space-between;
  width: 200%;
 
}

div.post{
display: grid;
grid-template-columns: 1fr;
/* grid-template-columns: 0.9fr 1.2fr; */
gap: 20px;
margin-bottom: 30px;
}

@media screen and (min-width:800px) {
  div.post{
    grid-template-columns: 0.9fr 1.2fr;
  }
  header nav{
    width: 79%;
    align-items: baseline;
  
  }
  
}
@media screen and (max-width:800px) {
  header nav{
    position: relative;
    margin-top: 25px;
    margin-left: 15px;
    white-space: nowrap;
  }
  header img{
    width: 20vw;
    margin-left: 20px;
  
    transform: scale(0.6);
  }
  
}

div.post div.texts h2{
  margin:0;
  font-size: 1.8rem;
}

div.post p.info{
 
  color: #888;
  font-size: 0.7rem;
  font-weight: bold;
  margin: 6px 0;
  display: flex;
  gap: 10px;
}

div.post p.info a.author{
  color: #333;
  text-decoration: none;
}

div.post p.summary{
  margin: 10px 0;
  line-height: 1.3rem;
  margin-right: 4vw;
  
}

.ql-editor{
  min-height: 180px;
  line-height: 1.6;
  word-spacing: 3px;
  font-size: 1rem;
  
}
.quillClass .quillContainer .ql-container{
  border:0 !important;
  outline: none;
}
.quillClass .quillContainer .ql-editor{
  line-height: 1.6;
  word-spacing: 3px;
  font-size: 1rem;
}



div.post-page div.image{
  max-height: 300px;
  display: flex;
  overflow: hidden;
  object-fit: cover;
  width: 100% !important;
  transform: scale(1.05);
}
div.post-page div.image img{
  object-fit: cover;
  object-position: center center;
  width:100% !important;
  position: relative;
}

div.post-page{
  margin: 0;
  padding: 0;
}

div.post-page a{
  color: #333;
  text-decoration: underline;
}
div.post-page h1{
text-align: center;
margin: 10px 0 5px ;
}
div.post-page time{
text-align: center;
display: block;
font-size: 0.8rem;
color: #aaa;
}

div.post-page div.author{
  text-align: center;
  margin-bottom: 20px;
}

div.post-page div.content p{
  line-height: 1.7rem;
}

div.edit-row{
  text-align: center;
  margin-bottom: 20px;
}
div.post-page a.edit-button{
  background-color: #333;
  color: #fff;
  display: inline-flex;
  align-items: center;
  gap: 5px;
  text-decoration: none;
  padding: 15px 30px;
  border-radius: 10px;
}
a svg{
  height: 23px;
}

.sticky {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  width: 100%;
  z-index: 9;
  background-color: black;
  color: white;
  opacity: 0.9;
  height: 120px;
}

.button-border{
 
  border: 3px solid white;
  padding: 10px;
  box-shadow: bisque;
  padding-left: 9px;
  padding-right: 9px;
  border-radius: 20px;
 margin-left: 10px;
}

.userDetails{
  
 
  align-items: baseline;
  display: ruby;
  padding-left: 9px;
  padding-right: 9px;
  
}
.logoutedBtn{

  border: 3px solid white;
  padding: 10px;
  box-shadow: bisque;
  padding-left: 25px;
  padding-right: 25px;
  border-radius: 25px;
 font-size: larger;
 font-weight: 600;
 margin-right: '20px';
}

.FootName:hover{

  transform: scale(1.05);
  color: white;
  font-weight: 500;
  transition: transform .6s ease;
  
  }

